<h1 class="center-header">Edit <%= attraction.placeName %></h1>

<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <form method="POST" action="/attractions/<%= attraction.id %>">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <label for="category">Category</label>
          <select class="form-control" id="category">
            <option <% if(attraction.category === 'Art') { %>selected<% } %>>Art</option>
            <option <% if(attraction.category === 'Architecture') { %>selected<% } %>>Architecture</option>
            <option <% if(attraction.category === 'Entertainment') { %>selected<% } %>>Entertainment</option>
            <option <% if(attraction.category === 'History') { %>selected<% } %>>History</option>
            <option <% if(attraction.category === 'Nature') { %>selected<% } %>>Nature</option>
            <option <% if(attraction.category === 'Museum') { %>selected<% } %>>Museum</option>
            <option <% if(attraction.category === 'Restaurant') { %>selected<% } %>>Restaurant</option>
            <option <% if(attraction.category === 'Shopping') { %>selected<% } %>>Shopping</option>
            <option <% if(attraction.category === 'Other') { %>selected<% } %>>Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="website">Website</label>
          <input class="form-control" type="url" name="website" value="<%= attraction.website %>" id="website" required>
        </div>
        <div class="form-group">
          <label for="image">Image url</label>
          <input class="form-control" type="url" name="image" value="<%= attraction.image %>" id="image" required>
        </div>
        <div class="form-group">
          <label for="description">Short description</label>
          <textarea class="form-control" type="text" name="description" placeholder="Short description" id="description" required rows="3"><%= attraction.description %></textarea>
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col">
    </div>
  </div>
</div>
