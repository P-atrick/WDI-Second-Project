<h1>Add an attraction</h1>

<form method="POST" action="/attractions">
  <div class="form-group">
    <label for="placeName">Place name</label>
    <input type="text" name="placeName" placeholder="Place name" id="placeName" required minlength="2">
  </div>
  <div class="form-group">
    <label for="website">Website</label>
    <input type="url" name="website" placeholder="Website" id="website" required>
  </div>
  <div class="form-group">
    <label for="image">Image url</label>
    <input type="url" name="image" placeholder="Image url" id="image" required>
  </div>
  <div class="form-group">
    <label for="description">Short description</label>
    <input type="text" name="description" placeholder="Short description" id="description" required>
  </div>
  <div class="form-group">
    <label for="rating">Rating out of 5</label>
    <input type="number" name="rating" placeholder="Rating out of 5" id="rating" required>
  </div>
  <div class="form-group">
    <label for="category">Category</label>
    <select class="form-control" id="category">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="line1">Address line 1</label>
    <input type="text" name="line1" placeholder="Address line 1" id="line1" required>
  </div>
  <div class="form-group">
    <label for="line2">Address line 2</label>
    <input type="text" name="line2" placeholder="Address line 2" id="line2" required>
  </div>
  <div class="form-group">
    <label for="coordinates">Coordinates</label>
    <input type="text" name="coordinates" placeholder="Coordinates" id="coordinates" required>
  </div>

  <button class="submit">Submit</button>
</form>
