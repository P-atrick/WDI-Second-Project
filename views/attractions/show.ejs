
<img src="<%= attraction.image %>">
<h1><%= attraction.placeName %></h1>
<h3><%= attraction.category %></h3>
<h3><%= attraction.rating %> <%= attraction.website%></h3>
<h3><%= attraction.description %></h3>
<h3><%= attraction.address.line1 %>, <%= attraction.address.line2 %></h3>
<h3><%= attraction.address.postcode %></h3>

<div class="map">

</div>

<a class="btn btn-primary" href="/attractions/<%= attraction.id %>/edit">Edit</a>
<form method="POST" action="/attractions/<%= attraction.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-primary" >Delete</button>
</form>

<% attraction.comments.forEach((comment) => { %>
  <p><%= comment.content %></p>
  <small><%= comment.createdBy.username %></small>
<% }) %>

<section>
  <h4>Leave a comment</h4>
  <form method="POST" action="/attractions/<%= attraction.id %>/comments">
    <textarea name="content" id="content" placeholder="Comment"></textarea>
    <button class="button">Leave a comment</button>
  </form>
</section>
